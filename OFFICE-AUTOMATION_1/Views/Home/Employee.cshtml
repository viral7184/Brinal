                        <!-- /.box-body -->
                    </div>
                </div>
            </div>
        </div>
        <!-- Info boxes -->
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">Employees List</h3>
                <a  data-toggle="modal" data-target="#myModal" type="button" class="btn btn-primary" style="float: right;">Add New Employee</a>
            </div>
            <!-- /.box-header -->
            <div class="box-body">               
                            <table id="fileTable" class="table table-bordered table-striped dataTable" role="grid" aria-describedby="fileTable_info">
                                <thead>
                                    <tr>                                        
                                        <th>SR_No</th>
                                        <th>Name</th>
                                        <th>Files</th>
                                        <th>Mobile</th>                                       
                                        <th>Email</th>                                       
                                        <th>Action</th>                                       
                                    </tr>
                                </thead>
                                <tbody>
                                    @{int i = 1;}
                                    @foreach(var item in ViewBag.emp)
                                    {
                                     
                                    <tr id="row_@item.ID">
                                        <td>
                                            <span>@i</span>                                           
                                           
                                        </td>
                                        
                                        <td id="name_@item.ID">
                                            <a href="~/employeedetails/@item.ID">  @item.NAME </a>
                                         </td>

                                        <td>@item.files.Count</td>
                                        <td id="mob1_@item.ID">
                                           @item.MOBILE1
                                        </td>
                                       
                                        <td id="email_@item.ID">
                                            @item.EMAIL
                                        </td>
                                        
                                        <td>
                                           <a onclick="OpenDialog(@item.ID)" style="display:inline" data-toggle="modal" data-target="#myModal1" type="button"> <i class="fa fa-edit"></i></a> 
                                            <a style="display:inline" class="hide_me" onclick="Delete(@item.ID,'del')"> &nbsp; <i class="fa fa-trash"></i> </a>
                                          </td>
                                       
                                    </tr>
                                        i++;
                                    }
                                </tbody>
                                
                              
                            </table>
                        </div>
                   </div>
        <!-- /.row -->
    </section>
    <!-- /.content -->


<script>        
    function OpenDialog(id) {
        var emp =
                   {
                       ID : id,                      
                   }
            $.ajax({
                url: '/getemployee/'+id,              
                type: 'GET',
                //contentType: 'application/json; charset=utf-8',
                success: function (data) {

                    $('#ID').val(data.data.ID);
                    $('#NAME').val(data.data.NAME);
                    $('#ADDRESS1').val(data.data.ADDRESS1);
                    $('#ADDRESS2').val(data.data.ADDRESS2);
                    $('#MOBILE1').val(data.data.MOBILE1);
                    $('#MOBILE2').val(data.data.MOBILE2);
                    $('#EMAIL1').val(data.data.EMAIL);   
                    var proof= data.data.ID_PROOF.split('-');
                    $('#PROOF option[value=' + proof[0] + ']').attr("selected", "selected");
                    $('#ID_PROOF').val(proof[1]);       
                }
            }); 
        }
    </script>
<script>
        function Delete(id,del)
        {
            if (confirm("Are you sure Delete this Record?")) {
                var deletes =
                   {
                       ID : id,
                       em_del : del,
                   }
                {        
                    $.ajax({
                        url: '/delete/',
                        data: JSON.stringify(deletes),
                        type: 'post',
                        contentType: 'application/json; charset=utf-8',
                        success: function (data) {     
                            var dt = data.data.IS_DELETED;
                            if(dt == true)
                            {
                                $('#row_'+id).hide();                                
                            }
                            else
                            {
                                alert("This employee has assign a file(s)");
                            }                            
                        }
                    }); 
                    error: {
                     
                    }
                }
            }
            return false;
        }

</script>


   <script>
           function phoneno(){
               $('#phone1,#phone2,#MOBILE1,#MOBILE2').keypress(function (e) {
                var a = [];
                var k = e.which;

                for (i = 48; i < 58; i++)
                    a.push(i);

                if (!(a.indexOf(k)>=0))
                    e.preventDefault();
            });
        }
    </script>   