                                            <div class="col-xs-8">
                                                <input type="text" name="ID_PROOF" id="ID_PROOF" class="form-control" placeholder="Enter No">
                                            </div>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label for="exampleInputFile">Proof file upload</label>
                                        <input type="file" name="FILE_NAME" id="files">
                                    </div>
                                    <div class="box-footer">
                                        <input type="hidden" id="hdnid" name="ID" />
                                        <input type="submit" disabled id="submit_id" class="btn btn-success pull-right" value="Upadate Employee Details" />
                                    </div>
