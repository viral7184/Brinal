                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="exampleInputFile">Proof file upload</label>
                                        <input type="file" name="FILE_NAME" id="">
                                    </div>
                                    <div class="box-footer">
                                        <input type="submit" class="btn btn-success pull-right" value="Add Employee Details" />
                                    </div>
                                </form>                     
                    </div>
                </div>
            </div>
        </div>


        <!-- Modal -->
        <div class="modal fade" id="myModal1" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
                        <h4 class="modal-title" id="myModalLabel">Edit Employee Details</h4>
                    </div>
                    <div class="modal-body">
                        <!-- /.box-header -->
                        <form role="form" method="post" id="Config_Form" enctype="multipart/form-data">

                            <!-- text input -->
                            <div class="form-group ">
                                <label>Employee Name<span class="error"> * </span></label>
                                <input type="text" class="hidden" name="ID" id="ID" />
                                <input type="text" name="NAME" required id="NAME" class="form-control" placeholder="Enter Employee Name">
                                <!-- <span class="help-block error">* User Name Already Exist</span> -->
                            </div>
                            <!-- text input -->
                            <!-- text input -->
                            <div class="row">
                                <div class="col-sm-6">
                                    <div class="form-group ">
                                        <label>Employee Address</label>
                                        <input type="text" name="ADDRESS1"  id="ADDRESS1" class="form-control" placeholder="Enter Employee Address">
                                        <!-- <span class="help-block error">* User Name Already Exist</span> -->
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <!-- text input -->
                                    <div class="form-group ">
                                        <label>Employee Address 2</label>
                                        <input type="text" name="ADDRESS2"  id="ADDRESS2" class="form-control" placeholder="Enter Employee Address2">
                                        <!-- <span class="help-block error">* User Name Already Exist</span> -->
                                    </div>
                                </div>
                            </div>
                            <!-- text input -->
                            <div class="row">
                                <div class="col-sm-6">
                                    <div class="form-group ">
                                        <label>Employee Mobile</label>
                                        <input type="text" name="MOBILE1" onkeypress="phoneno()" maxlength="10" id="MOBILE1" class="form-control" placeholder="Enter Employee Mobile">
                                        <!-- <span class="help-block error">* User Name Already Exist</span> -->
                                    </div>
                                </div>
                                <!-- text input -->
                                <div class="col-sm-6">
                                    <div class="form-group ">
                                        <label>Employee Landline</label>
                                        <input type="text" onkeypress="phoneno()" name="MOBILE2" id="MOBILE2" class="form-control" placeholder="Enter Employee Mobile 2">
                                        <!-- <span class="help-block error">* User Name Already Exist</span> -->
                                    </div>
                                </div>
                            </div>
                                    <!-- text input -->
                                    <div class="form-group ">
                                        <label>Employee Email<span class="error"> * </span></label>
                                        <input type="text" name="EMAIL" id="EMAIL1" class="form-control" placeholder="Enter Employee Email" required>
                                        <!-- <span class="help-block error">* User Name Already Exist</span> -->
                                    </div>
                                    <!-- text input -->

                                    <div class="form-group">
                                        <label>Id Proof</label>
                                        <div class="row">
                                            <div class="col-xs-4">
                                                <select name="PROOF" id="PROOF"  class="form-control select2 select2-container select2-container--default" dir="ltr" style="width: 100%;">
