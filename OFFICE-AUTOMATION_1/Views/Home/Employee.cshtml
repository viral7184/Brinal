                                </div>
                            </div>
                            <!-- text input -->
                            <div class="row">
                                <div class="col-sm-6">
                                    <div class="form-group ">
                                        <label>Employee Email<span class="error"> * </span></label>
                                        <input type="text" name="EMAIL" class="form-control" placeholder="Enter Employee Email" required>
                                        <!-- <span class="help-block error">* User Name Already Exist</span> -->
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <!-- text input -->
                                    <div class="form-group ">
                                        <label>Password<span class="error"> * </span></label>
                                        <input type="password" name="PASSWORD"  class="form-control" placeholder="Enter Employee Password" required>
                                        <!-- <span class="help-block error">* User Name Already Exist</span> -->
                                    </div>
                                </div>
                            </div>
                                    <div class="form-group">
