                    @{int i = 1;}
                    @foreach (var item in ViewBag.banks)
                    {
                        <tr id="row_@item.ID">
                            <td>
                                <span>@i</span>
                            </td>
                            <td id="name_@item.ID">
                                <a href="~/Bankdetails/@item.ID">@item.NAME </a>
                                @*@item.NAME*@
                            </td>
                            <td>
                                @item.files.Count
                            </td>
                            <td id="mobile_@item.ID">
                                @item.MOBILE
                            </td>
                            <td id="no_of_year_@item.ID">
                                @item.NO_OF_YEAR
                            </td>
                            <td id="NEC_@item.ID">
                                @item.NEC
                            </td>
                            <td id="fees_@item.ID">
                                @item.FEES
                            </td>
                            <td id="Legal_fees_@item.ID">
                                @item.LEGAL_FEES
                            </td>
                            <td>
                                <a href="" onclick="OpenDialog(@item.ID)" data-toggle="modal" data-target="#myModal1" type="button"> <i class="fa fa-edit"></i></a>
                                <a class="hide_me" style="display:inline" onclick="Delete(@item.ID,'del')"> &nbsp; <i class="fa fa-trash"></i> </a>
                                @*<a style="display:inline" href="~/getbill/@item.NAME">&nbsp;<i class="fa fa-print" aria-hidden="true"></i> </a>*@
                            </td>
                        </tr>
                        i++;
                    }
                </tbody>
            </table>
        </div>
    </div>
    <!-- /.row -->
</section>
