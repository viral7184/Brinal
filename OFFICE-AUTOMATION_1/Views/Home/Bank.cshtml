            <table id="fileTable" class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>SR_No</th>
                        <th>Bank_Name</th>
                        <th>Files</th>
                        <th>Mobile</th>
                        <th title="No of year">NOY</th>
                        <th>NEC</th>
                        <th>Search Fees</th>
                        <th>Legal Fees</th>
                        <th>Action</th>
                    </tr>
                </thead>
